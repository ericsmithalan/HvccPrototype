<p2:ControlBase
    x:Class="HVCC.Prototype2.DeviceInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p2="clr-namespace:HVCC.Prototype2"
    IsDialog="True"
    IsMenusVisible="False"
    Description="Displays information about the device. Manufacturers provide information inside this dialog"
    WindowName="Device Info">

    <DockPanel Margin="40,30,40,40">

        <StackPanel DockPanel.Dock="Top">
