<p2:ControlBase
    x:Class="HVCC.Prototype2.FormatComplete"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p2="clr-namespace:HVCC.Prototype2"
    WindowName="Format Complete"
    IsDialog="True"
    IsMenusVisible="False"
    Description="User sees this dialog during device format"
    Style="{StaticResource UC_Dialog}">

    <DockPanel Style="{StaticResource DP_Dialog}">
        <StackPanel DockPanel.Dock="Top" Style="{StaticResource SP_Dialog}">

            <TextBlock Style="{StaticResource DLG_Header}">
                Format Complete
            </TextBlock>
            <TextBlock Style="{StaticResource DLG_SubHeader}">
                All the data on your device has been deleted.
            </TextBlock>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Style="{StaticResource SP_Buttons}" Margin="0">
            <Button Click="Button_Click" IsCancel="False" Style="{StaticResource ButtonAction}" Content="OK" Margin="10,0,0,0" />
        </StackPanel>
    </DockPanel>
</p2:ControlBase>