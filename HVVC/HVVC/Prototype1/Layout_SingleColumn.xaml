<UserControl
    x:Class="HVCC.Prototype1.Layout_SingleColumn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="grid_main" Margin="40,40,40,0" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" x:Name="tb_pageTitle" HorizontalAlignment="Left" VerticalAlignment="Top"  Text="Page Title" Style="{StaticResource H1}" />
            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="tb_pageDescription" Grid.Row="0" Text="Page Description" Style="{StaticResource T1}" />
        </StackPanel>
    </Grid>
</UserControl>