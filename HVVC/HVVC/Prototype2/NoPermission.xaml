<p2:ControlBase
    x:Class="HVCC.Prototype2.NoPermission"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p2="clr-namespace:HVCC.Prototype2"
    WindowName="Account Has No Permissions"
    Description="If HVCC finds an account but doesn't have the right permissions, users will see this page."
    IsDialog="False"
    IsMenusVisible="True"
    IsDeviceRelatedPage="True">
    <StackPanel Style="{StaticResource SP_Main_Menu}">
        <TextBlock  Style="{StaticResource WND_Header}">Update your permissions</TextBlock>
        <TextBlock Style="{StaticResource WND_SubHeader}">
            <Run>You do not have the right permissions for this device. Please go to HealthVault and update your permissions</Run>
        </TextBlock>

        <Button Click="Button_Click" VerticalAlignment="Top" Margin="0,30,0,0" Style="{StaticResource ButtonAction}" Width="290" Content="Update permisions online at HealthVault" />
    </StackPanel>
</p2:ControlBase>