<UserControl x:Class="HVCC.Controls.Uploading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="0,25,0,0">
        <TextBlock x:Name="tb_status" Style="{StaticResource TA}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,5">
            <Run>Uploading 12 items to</Run>
            <Run x:Name="tb_user" FontWeight="Bold"></Run>
            <Run>record:</Run>
        </TextBlock>
        <TextBlock x:Name="tb_progress" Style="{StaticResource T1}" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Progress" Margin="0,10,0,0" />
        <ProgressBar x:Name="progress" Minimum="0" Maximum="10" VerticalAlignment="Top" Width="Auto" Height="20" Margin="0,5,0,0" />
        <Button Style="{StaticResource Btn}" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Cancel" Margin="0,50,0,0" Click="Button_Click" />
    </StackPanel>
</UserControl>