                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource StandardButtonGradientHvr}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="true">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource StandardButtonGradientPress}" />
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource StandardButtonBorder}" />
