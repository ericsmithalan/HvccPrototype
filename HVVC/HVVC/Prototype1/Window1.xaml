<Window
    x:Class="HVCC.Prototype1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hvcc="clr-namespace:HVCC.Prototype1"
    Title="Microsoft HealthVault Connection Center"
    Height="455"
    Width="472"

    FontFamily="Arial"
    FontSize="12"
    ResizeMode="NoResize"
    ToolTip="Microsoft HealthVault Connection Center" WindowStartupLocation="CenterScreen" Icon="/HVCC;component/hv.ico">
    <Window.Background>
        <ImageBrush ImageSource="../images/background.png" Stretch="Fill" />
    </Window.Background>
    <Grid x:Name="grid_main">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition x:Name="row_mainBody"></RowDefinition>
            <RowDefinition Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <hvcc:Header Grid.Row="0" />
        <hvcc:Footer Grid.Row="2" />
    </Grid>
</Window>